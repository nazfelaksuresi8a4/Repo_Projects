import matplotlib.pyplot as plt
from matplotlib.animation import FuncAnimation
import numpy as np

plt.style.use("dark_background")

fig,ax = plt.subplots()
x = np.linspace(0,2*np.pi,100)
sinf, = plt.plot(np.cos(x),c="green")
cosf, = plt.plot(np.cos(x),c="green")

def update(frame): 
	
	sinf.set_ydata(np.sin(x+frame/10.0))
	cosf.set_ydata(np.cos(x+frame/10.0))
	return sinf,cosf,

ani = FuncAnimation(fig,update,interval=70,frames=555)

plt.show()	 	 	 	 
	