#Burada strench (widget sıkıştırma) yöntemi kullanılmıştır label bu yüzden atanmıştır#

from PyQt5.QtWidgets import *
from PyQt5.QtCore import *
import sys

class MainWindow(QMainWindow):
    def __init__(self):
        super().__init__()

        main_widget = QWidget()
        self.setCentralWidget(main_widget)

        self.h_layout = QHBoxLayout()
        main_widget.setLayout(self.h_layout)

        self.side_panel = QWidget()
        self.side_panel.setFixedWidth(0)  # Başlangıçta genişlik 0
        self.side_panel.setStyleSheet("background-color: lightgray;")

        v_layout = QVBoxLayout()
        self.side_panel.setLayout(v_layout)

        v_layout.addWidget(QPushButton("Menü 1"))
        v_layout.addWidget(QPushButton("Menü 2"))
        v_layout.addWidget(QPushButton("Menü 3"))

        self.content = QLabel("Ana içerik alanı")
        self.content.setAlignment(Qt.AlignCenter)

        self.h_layout.addWidget(self.side_panel)
        self.h_layout.addWidget(self.content)

        toggle_btn = QPushButton("☰ Menü Aç/Kapa")
        toggle_btn.clicked.connect(self.toggle_side_panel)

        toolbar = QToolBar()
        toolbar.addWidget(toggle_btn)
        self.addToolBar(toolbar)

        self.animation = QPropertyAnimation(self.side_panel, b"maximumWidth")
        self.animation.setDuration(300)  # 300 ms animasyon süresi


        self.panel_open = False  # Panelin açık/kapalı durumu

    def toggle_side_panel(self):
        if self.panel_open:
            # Panel açık, kapat
            self.animation.setStartValue(150)
            self.animation.setEndValue(0)
            self.animation.start()
            self.panel_open = False
        else:
            # Panel kapalı, aç
            self.animation.setStartValue(0)
            self.animation.setEndValue(150)
            self.animation.start()
            self.panel_open = True


if __name__ == "__main__":
    app = QApplication(sys.argv)
    window = MainWindow()
    window.resize(500, 300)
    window.show()
    sys.exit(app.exec_())
